<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@color/basebg"
    >


    <LinearLayout
        android:id="@+id/linlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/group_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/uncart_select"
                />

            <ImageView
                android:id="@+id/group_img"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:scaleType="centerInside"
                android:src="@null"
                android:layout_marginLeft="9dp"
                android:padding="1dp"
                android:background="@drawable/infodialogedge"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            >
            <TextView
                android:id="@+id/group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="......"
                android:textColor="#333333"
                android:textSize="14sp"
                android:maxLines="2"
                android:singleLine="false"
                android:ellipsize="end"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/shopitmeguige"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颜色：粉色      尺码：均码"
                android:textColor="#777777"
                android:textSize="12sp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:visibility="gone"
                />
            <TextView
                android:layout_weight="1"
                android:id="@+id/group_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 0.0"
                android:gravity="bottom"
                android:textColor="@color/goodscolor"
                android:textSize="12sp"
                />
        </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom"
            >
            <TextView
                android:id="@+id/shopx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:textColor="#333333"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/group_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#333333"
                android:textSize="12sp"
                android:layout_marginRight="5dp"
                />
        </LinearLayout>



    </LinearLayout>


    <View
        android:id="@+id/group_view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/sbg"
        ></View>

</RelativeLayout>