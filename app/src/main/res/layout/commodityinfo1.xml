<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basebg"
    >


    <LinearLayout
        android:id="@+id/sview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <TextView
        android:id="@+id/goodstitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="13sp"
        android:text="xxxx"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/goodscolor"
            android:layout_marginLeft="15dp"
            android:text="¥"
            android:textSize="12sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/goodsinfoPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/goodscolor"
            android:text="0.00"
            android:textSize="19sp"
            android:textStyle="bold"
            />

    </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/basebg"
            >
            <TextView
                android:id="@+id/cankaojia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="28"
                android:singleLine="true"
                android:textColor="@color/goodscolor2"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:text="市场参考价:¥0.00"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/yishou"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="28"
                android:textSize="14sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="@color/goodscolor2"
                android:text="已售0.00"
                android:layout_weight="1"
                android:gravity="right"
                />
        </LinearLayout>








    <View
        android:id="@+id/goodsview1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/viewbg"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/goodschima1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="28"
            android:singleLine="true"
            android:textColor="@color/textcolor"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="产品规格"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/goodschima2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="28"
            android:textSize="14sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#000"
            android:text="选择"
            android:layout_weight="1"
            android:drawableRight="@mipmap/click"
            android:textAlignment="viewEnd"
            android:drawablePadding="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/unilatop"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="28"
            android:singleLine="true"
            android:textColor="@color/textcolor"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="运费"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/yunfei"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="28"
            android:textSize="14sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#000"
            android:text="0.00"
            android:layout_weight="1"
            android:drawableRight="@mipmap/click"
            android:textAlignment="textEnd"
            android:drawablePadding="10dp" />
    </LinearLayout>

        <View
            android:id="@+id/goodsview2"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/viewbg"
            />

