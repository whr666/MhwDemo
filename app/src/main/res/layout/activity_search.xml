<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ledou.mhw.activity.SearchActivity">



    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@drawable/unilabut"
        >
        <ImageView
            android:id="@+id/backimg"
            android:layout_width="@dimen/backw"
            android:layout_height="@dimen/backh"
            android:padding="@dimen/back"
            android:src="@mipmap/s_return"
            android:layout_gravity="center"
            android:visibility="gone"
            />
        <com.ledou.mhw.view.widget.Myeditext
            android:id="@+id/indexSearch2"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:background="@drawable/edge"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/scanback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:textColor="@color/titlecolor"
            />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/sbg"
        />
    <!--热门  -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="热门搜索"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/searchbg"
        />
    <GridView
        android:id="@+id/searchgridview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="false"
        android:scrollbars="none"
        android:numColumns="5"
        android:listSelector="@android:color/transparent"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        />

    <!--  历史-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="搜索历史"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/searchbg"
        android:visibility="invisible"
        />
    <ListView
        android:id="@+id/searchlistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="false"
        android:scrollbars="none"
        android:listSelector="@android:color/transparent"
        android:visibility="invisible"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清除搜索历史"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:layout_marginBottom="14dp"
        android:background="@drawable/edge"
        android:textColor="@color/hei"
        android:visibility="invisible"
        />









</LinearLayout>
